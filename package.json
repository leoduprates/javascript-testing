{
  "name": "javascript-testing",
  "version": "1.0.0",
  "description": "Javascript project built on Github Actions with Unit, Integration and E2E tests with Jest, Supertest, Puppeteer, Sinon and MongoDB.",
  "main": "server.js",
  "scripts": {
    "test": "NODE_ENV=test jest --verbose",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:frontend": "jest --testPathPattern=tests/e2e/frontend",
    "test:backend": "jest --testPathPattern=tests/e2e/backend",
    "coverage": "jest --collect-coverage",
    "dev": "nodemon --delay 500ms index.js",
    "start": "node index.js"
  },
  "author": "leoduprates",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "mongoose": "^5.13.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.3.2",
    "nodemon": "^2.0.12",
    "proxyquire": "^2.1.3",
    "puppeteer": "^10.1.0",
    "sinon": "^11.1.1",
    "supertest": "^6.1.4"
  }
}
